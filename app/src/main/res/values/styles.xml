<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>

    
    <style name="CollapsedAppBar" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="textSize">24sp</item>
        <item name="textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBar" parent="@style/TextAppearance.AppCompat.Title">
        <item name="textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
